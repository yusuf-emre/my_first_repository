EXPECTED_BAKE_TIME = 40

PREPARATION_TIME = 2

elapsed_bake_time = int(input('How long has lasagna been in the oven?: '))
def bake_time_remaining(elapsed_bake_time):
    """remaining baking time is calculated by substracting from expected bake time"""
    return EXPECTED_BAKE_TIME - elapsed_bake_time

number_of_layers = int(input('Number of layers: '))
def preparation_time_in_minutes(number_of_layers):
    """preparation time is calculated by number of layers times avg time spent to prepare per layer"""
    return number_of_layers * PREPARATION_TIME

def elapsed_time_in_minutes(number_of_layers, elapsed_bake_time):
    """total elapsed time is calculated by adding up elapsed bake time and total time spent for preparation"""
    return preparation_time_in_minutes(number_of_layers) + elapsed_bake_time

print(EXPECTED_BAKE_TIME - elapsed_time_in_minutes(number_of_layers, elapsed_bake_time))
